<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_trip_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@android:color/white"
            app:title="@string/add_trip_title"
            app:titleTextColor="@android:color/white"
            app:titleCentered="true"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.Material3.Light"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 表单区 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/field_horizontal_margin"
            android:paddingEnd="@dimen/field_horizontal_margin"
            android:paddingTop="@dimen/section_gap"
            android:paddingBottom="@dimen/section_gap">

            <!-- Trip Name * -->
            <TextView
                android:id="@+id/tvTripNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_name_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTripName"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/field_fill"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTripNameLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTripName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/trip_name_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location * Label -->
            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap"
                android:text="@string/location_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilTripName" />

            <!-- Location 输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLocation"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/field_stroke"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_location_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLocationLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/location_hint"
                    android:textColorHint="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date *（起止两侧按钮 + “to” 文本） -->
            <TextView
                android:id="@+id/tvDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap_small"
                android:text="@string/date_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilLocation"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartDate"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/date_start_placeholder"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:icon="@drawable/ic_calendar_24"
                app:iconTint="@color/black"
                app:iconGravity="start"
                app:iconPadding="6dp"
                app:iconSize="18dp"
                app:cornerRadius="4dp"
                app:layout_constraintEnd_toStartOf="@+id/tvTo"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDateLabel"/>

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="@string/date_to"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/btnStartDate"
                app:layout_constraintEnd_toStartOf="@+id/btnEndDate"
                app:layout_constraintStart_toEndOf="@id/btnStartDate"
                app:layout_constraintTop_toTopOf="@id/btnStartDate"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndDate"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/date_end_placeholder"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:icon="@drawable/ic_calendar_24"
                app:iconTint="@color/black"
                app:iconGravity="start"
                app:iconPadding="6dp"
                app:iconSize="18dp"
                app:cornerRadius="4dp"
                app:layout_constraintStart_toEndOf="@id/tvTo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnStartDate"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- Description Label -->
            <TextView
                android:id="@+id/tvDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap"
                android:text="@string/description_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStartDate" />

            <!-- Description 输入框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDesc"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/field_fill"
                app:boxStrokeColor="@color/field_stroke"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:minLines="3"
                    android:hint="@string/description_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tripmates * 标题 -->
            <TextView
                android:id="@+id/tvTripmatesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap"
                android:text="@string/tripmates_label"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilDesc"/>

            <!-- 蓝牙添加 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddViaBluetooth"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tripmates_add_via_bluetooth"
                app:cornerRadius="4dp"
                app:icon="@drawable/ic_bluetooth_24"
                app:iconGravity="textStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTripmatesLabel" />

            <!-- 通过邮箱添加（输入 + 按钮） -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMateEmail"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/field_fill"
                app:boxStrokeColor="@color/field_stroke"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnAddMate"
                app:layout_constraintTop_toBottomOf="@id/btnAddViaBluetooth">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMateEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tripmates_add_by_email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddMate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="?attr/colorPrimary"
                app:srcCompat="@drawable/ic_add_24"
                app:tint="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/tilMateEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tilMateEmail"
                app:layout_constraintBottom_toBottomOf="@id/tilMateEmail" />

            <TextView
                android:id="@+id/tvTripmatesAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tripmates_added_title"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilMateEmail"/>

            <!-- 成员列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTripmates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTripmatesAdded"
                tools:listitem="@layout/item_tripmate_email" />

            <!-- Create Trip -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateTrip"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/section_gap"
                android:text="@string/create_trip"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/primary_blue"
                app:iconTint="@android:color/white"
                app:cornerRadius="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvTripmates" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
