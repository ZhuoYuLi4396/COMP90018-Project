<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 顶部标题 -->
        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EqualTrip"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/splash_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageButton
            android:id="@+id/btnBell"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notifications_24"
            android:contentDescription="@string/notification"
            app:tint="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/tvBrand"
            app:layout_constraintBottom_toBottomOf="@id/tvBrand"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Hi, Username -->
        <TextView
            android:id="@+id/tvHi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,"
            android:textSize="18sp"
            android:textColor="#7A7A7A"
            app:layout_constraintTop_toBottomOf="@id/tvBrand"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="42sp"
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@id/tvHi"
            app:layout_constraintStart_toEndOf="@id/tvHi"
            android:layout_marginStart="8dp"/>

        <!-- You have 2 ongoing trips -->
        <LinearLayout
            android:id="@+id/rowTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have"
                android:textSize="18sp"
                android:textColor="#7A7A7A"/>

            <TextView
                android:id="@+id/tvOngoingTripsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2 "
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ongoing trips"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>


        <!-- 6 unpaid bills -->
        <LinearLayout
            android:id="@+id/rowBills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rowTrips"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvUnpaidBillsNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 "
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unpaid bills"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>



<!--</androidx.constraintlayout.widget.ConstraintLayout>-->

        <!-- 只保留：交互式地图 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mapCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rowBills"
            app:layout_constraintBottom_toTopOf="@id/rowButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#D0D0D0"
            app:strokeWidth="1dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 底部两个按钮 -->
        <LinearLayout
            android:id="@+id/rowButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewTrip"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="New Trip"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_add_24"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:backgroundTint="@android:color/black"
                app:rippleColor="@android:color/white"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="16dp"
                android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddBill"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Add Bill"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="18dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:strokeColor="#B0B0B0"
                app:strokeWidth="1dp"
                app:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- bottomNav -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@drawable/nav_item_color"
        app:itemTextColor="@drawable/nav_item_color"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        app:backgroundTint="@android:color/transparent"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:paddingBottomSystemWindowInsets="false"
        app:paddingTopSystemWindowInsets="false"
        app:paddingLeftSystemWindowInsets="false"
        app:paddingRightSystemWindowInsets="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>

