<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="@dimen/page_padding">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp"/>

    <!-- Title: EqualTrip -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/equaltrip"
        android:gravity="center"
        android:textSize="48sp"
        android:fontFamily="@font/inter"
        android:textFontWeight="700"
        android:textAppearance="@style/TextAppearance.EqualTrip.Title"
        app:layout_constraintTop_toTopOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle: Split bills in trips -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/split_bills"
        android:gravity="center"
        android:textSize="19sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.Subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/subtitle_top_gap"/>

    <!-- ===== Name ===== -->
    <TextView
        android:id="@+id/lblName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilName"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lblName"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ===== Email or Phone ===== -->
    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email_or_ph"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tilName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lblEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ===== Password ===== -->
    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:endIconMode="password_toggle"
        app:errorEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/lblPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ===== Confirm Password ===== -->
    <TextView
        android:id="@+id/lblConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/confirm_pas"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirm"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:endIconMode="password_toggle"
        app:errorEnabled="true"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/lblConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Terms checkbox + label -->
    <LinearLayout
        android:id="@+id/llTerms"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tilConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/terms_gap">

        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/i_agree_to_"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.EqualTrip.Terms"
            android:paddingStart="8dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Page-level error -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llTerms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/error_gap"
        tools:text="This email is already registered"/>

    <!-- Primary button (black, rounded) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        style="@style/Widget.EqualTrip.Button.Primary"
        android:layout_width="0dp"
        android:text="@string/action_sign_up"
        app:layout_constraintTop_toBottomOf="@id/tvError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/btn_top_gap"/>

    <!-- Footer: Already have an account? Sign in -->
    <TextView
        android:id="@+id/tvHaveAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/already_hav"
        android:textAppearance="@style/TextAppearance.EqualTrip.Footer"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/footer_top_gap"
        android:layout_marginBottom="@dimen/page_padding"/>
</androidx.constraintlayout.widget.ConstraintLayout>
