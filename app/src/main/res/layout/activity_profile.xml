<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/head_bar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:paddingStart="@dimen/field_horizontal_margin"
        android:paddingTop="32dp"
        android:paddingEnd="@dimen/field_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/equaltrip"
        app:titleCentered="false"
        app:titleTextAppearance="@style/ToolbarTitleText"
        app:titleTextColor="@color/link_blue" />

    <ImageView
        android:id="@+id/iv_bluetooth"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:contentDescription="@string/notifications"
        android:scaleType="centerInside"
        android:src="@drawable/ic_bluetooth_24"
        android:translationY="16dp"
        app:layout_constraintBottom_toBottomOf="@id/head_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/head_bar" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toBottomOf="@id/head_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
            android:orientation="vertical"
            android:paddingStart="@dimen/field_horizontal_margin"
            android:paddingEnd="@dimen/field_horizontal_margin"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/rowChangeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:contentDescription="profile"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvProfileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textColor="@color/field_stroke"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/link_blue"
                    android:padding="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/field_stroke" />

            <LinearLayout
                android:id="@+id/rowName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="16sp"
                    android:textColor="@color/field_stroke" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_chevron_right_24"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="#D32F2F"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:minHeight="0dp"
        app:cornerRadius="28dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/link_blue"
        app:backgroundTint="@android:color/white"
        app:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginBottom="16dp"/>


    <include layout="@layout/include_bottom_nav"/>
</androidx.constraintlayout.widget.ConstraintLayout>
