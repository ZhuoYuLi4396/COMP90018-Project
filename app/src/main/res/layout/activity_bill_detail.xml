<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <!-- 顶部头卡 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Trip.Header"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Toolbar：返回 + 居中标题 -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.Material3.Toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:paddingStart="0dp"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                app:navigationIconTint="@android:color/white"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:title="@string/bill_detail"
                app:titleCentered="true"
                app:titleTextColor="@android:color/white"
                app:popupTheme="@style/ThemeOverlay.Material3.Light"
                app:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 头卡内容：标题/副标题/日期/备注-->
            <LinearLayout
                android:id="@+id/headerContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:paddingBottom="20dp"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Bill Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch at Italian Restaurant"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="🍽 Dining | Pizzeria | 362 Little Bourke St"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.9"/>

                <!-- Date -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="2025-08-05"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:alpha="0.85"/>

                <!-- Note（可选） -->
                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Delicious lunch with ABC"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:alpha="0.85"
                    android:visibility="gone"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 可滚动内容（与 Trip 一致：40dp 左右留白） -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="32dp">

            <!-- Map Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="@dimen/field_corner"
                app:cardElevation="2dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapBill"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/light_gray"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Paid by -->
            <TextView
                android:id="@+id/labelPaidBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Paid by"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <LinearLayout
                android:id="@+id/rowPayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPayerAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle"
                    android:padding="2dp"
                    android:src="@drawable/ic_avatar_placeholder"/>

                <TextView
                    android:id="@+id/tvPayerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="A"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvPayerPaidAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid $100"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>

            <!-- Participants -->
            <TextView
                android:id="@+id/labelParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Participants"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap_small"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <!-- Receipt -->
            <TextView
                android:id="@+id/labelReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Receipt"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/field_gap_small"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/receiptContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"/>
            </HorizontalScrollView>

            <!-- Loading -->
            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
