<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_revert" />
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="16dp"
        android:text="Tripmates in the trip"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Radio Group for Tripmates -->
    <RadioGroup
        android:id="@+id/radio_group_tripmates"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <!-- Option A -->
        <RadioButton
            android:id="@+id/radio_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/list_selector_background"
            android:buttonTint="#007AFF"
            android:padding="16dp"
            android:text="A"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Option B -->
        <RadioButton
            android:id="@+id/radio_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/list_selector_background"
            android:buttonTint="#007AFF"
            android:padding="16dp"
            android:text="B"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Option C -->
        <RadioButton
            android:id="@+id/radio_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:drawable/list_selector_background"
            android:buttonTint="#007AFF"
            android:padding="16dp"
            android:text="C"
            android:textColor="#333333"
            android:textSize="16sp" />

    </RadioGroup>

    <!-- Change Payer Button -->
    <Button
        android:id="@+id/btn_change_payer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#000000"
        android:padding="16dp"
        android:text="Change payer"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>

