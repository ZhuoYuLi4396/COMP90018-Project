<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="@dimen/page_padding">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="172dp"/>

    <!-- Title: EqualTrip -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/equaltrip"
        android:gravity="center"
        android:textSize="48sp"
        android:fontFamily="@font/inter"
        android:textFontWeight="700"
        android:textAppearance="@style/TextAppearance.EqualTrip.Title"
        app:layout_constraintTop_toTopOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle: Welcome back -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_back"
        android:gravity="center"
        android:textSize="19sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.Subtitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/subtitle_top_gap"/>

    <!-- ===== Email or Phone ===== -->
    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email_or_ph"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/lblEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ===== Password ===== -->
    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.EqualTrip.FieldLabel"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/field_gap"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/EqualTrip.TextInput.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/lblPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingVertical="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:imeOptions="actionDone"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Remember me + Forgot password -->
    <LinearLayout
        android:id="@+id/llExtras"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/terms_gap"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbRemember"
            android:layout_width="31dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.EqualTrip.Terms"
            android:paddingStart="8dp"/>

        <!-- 添加空白视图作为间隔 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textAppearance="@style/TextAppearance.EqualTrip.Terms"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Page-level error -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llExtras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/error_gap"
        tools:text="Incorrect email or password"/>

    <!-- Primary button (black, rounded) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignIn"
        style="@style/Widget.EqualTrip.Button.Primary"
        android:layout_width="0dp"
        android:text="@string/action_sign_in"
        app:layout_constraintTop_toBottomOf="@id/tvError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/field_horizontal_margin"
        android:layout_marginEnd="@dimen/field_horizontal_margin"
        android:layout_marginTop="@dimen/btn_top_gap"/>

    <!-- Footer: Don't have an account? Sign up -->
    <TextView
        android:id="@+id/tvNoAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dont_have_account"
        android:textAppearance="@style/TextAppearance.EqualTrip.Footer"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/btnSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/footer_top_gap"
        android:layout_marginBottom="@dimen/page_padding"/>
</androidx.constraintlayout.widget.ConstraintLayout>